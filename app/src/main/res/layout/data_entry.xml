<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="15sp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/data_entry_list_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="13dp"
        android:textSize="15sp" />

    <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/data_entry_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:id="@+id/data_entry_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="13dp"
                android:textSize="15sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/data_entry_list_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:labelFor="@id/data_entry_list_edit"
                android:paddingBottom="16dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="16dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/data_entry_delete_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/button_delete_data_entry_text" />

        </LinearLayout>

    </ViewSwitcher>
</LinearLayout>
